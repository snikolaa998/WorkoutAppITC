<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3"/>

    <View
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline"
        android:background="@color/header_background"/>

    <View
        android:id="@+id/viewSupporter"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/cardView"/>

    <View
        android:id="@+id/pointsView"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/view_header_radius"
        android:elevation="2dp"
        app:layout_constraintBottom_toTopOf="@id/tv_day"
        app:layout_constraintStart_toStartOf="@id/cardView"
        app:layout_constraintEnd_toEndOf="@id/cardView"/>

    <ImageView
        android:id="@+id/iv_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/pointsView"
        app:layout_constraintStart_toStartOf="@id/pointsView"
        app:layout_constraintBottom_toBottomOf="@id/pointsView"
        android:elevation="3dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_fire"/>

    <TextView
        android:id="@+id/tv_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_points"
        app:layout_constraintStart_toEndOf="@id/iv_points"
        app:layout_constraintBottom_toBottomOf="@id/iv_points"
        android:layout_marginStart="3dp"
        android:elevation="3dp"
        android:text="1200"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:textSize="10sp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:cardElevation="1dp"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/header"
        app:layout_constraintStart_toStartOf="@id/header">
        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_image_24"
            android:background="@color/white"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_greetings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="24dp"
        android:text = "Good Morning"
        android:textSize="14sp"
        android:textStyle="bold"
        android:fontFamily="@font/opensans_regular"
        android:textColor="@color/dark_gray"
        app:layout_constraintTop_toTopOf="@id/cardView"
        app:layout_constraintStart_toEndOf="@id/cardView"/>

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_greetings"
        app:layout_constraintStart_toStartOf="@id/tv_greetings"
        android:text="John Doe"
        android:fontFamily="@font/opensans_regular"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_user_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_user_name"
        app:layout_constraintStart_toStartOf="@id/tv_user_name"
        android:text="User Level"
        android:fontFamily="@font/opensans_regular"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/green"/>

    <ImageView
        android:id="@+id/iv_bell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_icon_bell"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_user_name"/>

    <ImageView
        android:id="@+id/iv_document"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_icon_document"
        app:layout_constraintEnd_toStartOf="@id/iv_bell"
        app:layout_constraintTop_toTopOf="@id/iv_bell"
        android:layout_marginEnd="24dp"/>

    <View
        android:id="@+id/view2"
        android:layout_width="150dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_user_level"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:background="@drawable/image_radius"/>

    <ImageView
        android:id="@+id/iv_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_icon_calendar"
        app:layout_constraintTop_toTopOf="@id/view2"
        app:layout_constraintStart_toStartOf="@id/view2"
        app:layout_constraintBottom_toBottomOf="@id/view2"/>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="28 June"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="@font/opensans_regular"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/iv_calendar"
        app:layout_constraintTop_toTopOf="@id/iv_calendar"
        app:layout_constraintBottom_toBottomOf="@id/iv_calendar"/>

    <TextView
        android:id="@+id/tv_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monday"
        android:fontFamily="@font/opensans_regular"
        app:layout_constraintTop_toBottomOf="@id/cardView"
        app:layout_constraintStart_toStartOf="@id/cardView"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/header_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_goneMarginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/view2">
    </androidx.recyclerview.widget.RecyclerView>

    <androidx.core.widget.NestedScrollView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        android:layout_width="0dp"
        android:layout_height="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewWorkout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                app:cardCornerRadius="20dp">
                <RelativeLayout
                    android:id="@+id/relativeWorkout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/iv_workout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>
                    <ImageView
                        android:id="@+id/iv_play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="16dp"
                        android:layout_alignBottom="@id/iv_workout"
                        android:layout_alignStart="@id/iv_workout"
                        android:src="@drawable/ic_icon_play" />
                    <TextView
                        android:id="@+id/tv_workout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginStart="26dp"
                        android:layout_marginBottom="16dp"
                        android:layout_alignBottom="@id/iv_workout"
                        android:layout_alignStart="@id/iv_play"
                        android:text="Some example"
                        android:fontFamily="@font/opensans_regular"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <ImageView
                android:id="@+id/iv_time"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_icon_feather_clock"
                android:scaleType="centerInside"
                android:background="@color/light_green"
                app:layout_constraintStart_toStartOf="@id/cardViewWorkout"
                app:layout_constraintTop_toBottomOf="@id/cardViewWorkout"/>
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30min"
                android:fontFamily="@font/opensans_regular"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@id/iv_time"
                app:layout_constraintStart_toEndOf="@id/iv_time"
                app:layout_constraintBottom_toBottomOf="@id/iv_time"
                android:layout_marginStart="8dp"/>
            <ImageView
                android:id="@+id/iv_weight"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_icon_weight"
                android:scaleType="centerInside"
                android:background="@color/light_green"
                app:layout_constraintEnd_toStartOf="@id/tv_weight"
                app:layout_constraintTop_toTopOf="@id/iv_time"
                android:layout_marginEnd="8dp"/>
            <TextView
                android:id="@+id/tv_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scale"
                android:fontFamily="@font/opensans_regular"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@id/cardViewWorkout"
                app:layout_constraintTop_toTopOf="@id/iv_time"
                app:layout_constraintBottom_toBottomOf="@id/iv_time"/>
            <ImageView
                android:id="@+id/iv_dumbbell"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="@id/iv_time"
                app:layout_constraintStart_toEndOf="@id/iv_time"
                app:layout_constraintEnd_toStartOf="@id/iv_weight"
                android:src="@drawable/ic_icon_dumbbell"
                android:scaleType="centerInside"
                android:background="@color/light_green"/>
            <TextView
                android:id="@+id/tv_dumbbell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/iv_time"
                app:layout_constraintStart_toEndOf="@id/iv_dumbbell"
                app:layout_constraintBottom_toBottomOf="@id/iv_dumbbell"
                android:layout_marginStart="8dp"
                android:text="5kgx2"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_recipe_of_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Recipe of the day"
                android:fontFamily="@font/opensans_regular"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/iv_time"
                app:layout_constraintStart_toStartOf="parent"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewRecipe"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintTop_toBottomOf="@id/tv_recipe_of_day"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/iv_recipe"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>
                    <TextView
                        android:id="@+id/tv_recipe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:fontFamily="@font/opensans_regular"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="16dp"
                        android:layout_alignBottom="@id/iv_recipe"
                        android:layout_alignStart="@id/iv_recipe"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/tv_featured_mindset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Featured mindset"
                android:fontFamily="@font/opensans_regular"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/cardViewRecipe"
                app:layout_constraintStart_toStartOf="parent" />
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewMindset"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintTop_toBottomOf="@id/tv_featured_mindset"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/iv_mindset"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>
                    <TextView
                        android:id="@+id/tv_mindset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/iv_mindset"
                        android:layout_alignStart="@id/iv_mindset"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="16dp"
                        android:text="Some Text"
                        android:fontFamily="@font/opensans_regular"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <View
                android:id="@+id/view_week_progress"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/view_radius"
                app:layout_constraintTop_toBottomOf="@id/cardViewMindset"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>
            <TextView
                android:id="@+id/tv_week_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@id/view_week_progress"
                app:layout_constraintStart_toStartOf="@id/view_week_progress"
                android:text="This weeks progress"
                android:fontFamily="@font/opensans_regular"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_week_completed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="2 completed programs"
                android:fontFamily="@font/opensans_regular"
                app:layout_constraintTop_toBottomOf="@id/tv_week_progress"
                app:layout_constraintStart_toStartOf="@id/tv_week_progress" />
            <TextView
                android:id="@+id/tv_week_challenges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="4 challenges"
                android:fontFamily="@font/opensans_regular"
                android:textSize="16sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/tv_week_completed"
                app:layout_constraintStart_toStartOf="@id/tv_week_completed" />
            <ImageView
                android:id="@+id/iv_share_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_icon_share"
                app:layout_constraintTop_toTopOf="@id/tv_week_progress"
                app:layout_constraintEnd_toEndOf="@id/view_week_progress"
                android:layout_marginEnd="16dp"/>

            <View
                android:id="@+id/view_month_progress"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/view_radius"
                app:layout_constraintTop_toBottomOf="@id/view_week_progress"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/tv_month_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@id/view_month_progress"
                app:layout_constraintStart_toStartOf="@id/view_month_progress"
                android:text="This month progress"
                android:fontFamily="@font/opensans_regular"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_month_completed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="26 completed programs"
                android:fontFamily="@font/opensans_regular"
                app:layout_constraintTop_toBottomOf="@id/tv_month_progress"
                app:layout_constraintStart_toStartOf="@id/tv_month_progress" />
            <TextView
                android:id="@+id/tv_month_challenges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="14 challenges"
                android:fontFamily="@font/opensans_regular"
                android:textSize="16sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/tv_month_completed"
                app:layout_constraintStart_toStartOf="@id/tv_month_completed" />
            <ImageView
                android:id="@+id/iv_share_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_icon_share"
                app:layout_constraintTop_toTopOf="@id/tv_month_progress"
                app:layout_constraintEnd_toEndOf="@id/view_month_progress"
                android:layout_marginEnd="16dp"/>

            <View
                android:id="@+id/view_workout_tip"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/view_radius"
                app:layout_constraintTop_toBottomOf="@id/view_month_progress"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/tv_workout_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@id/view_workout_tip"
                app:layout_constraintStart_toStartOf="@id/view_workout_tip"
                android:text="Workout tip!"
                android:fontFamily="@font/opensans_regular"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_workout_advice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="Placeholder workout tip"
                android:fontFamily="@font/opensans_regular"
                app:layout_constraintTop_toBottomOf="@id/tv_workout_tip"
                app:layout_constraintStart_toStartOf="@id/tv_workout_tip"
                app:layout_constraintEnd_toEndOf="@id/view_workout_tip"/>
            <ImageView
                android:id="@+id/iv_share_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_icon_share"
                app:layout_constraintTop_toTopOf="@id/tv_workout_tip"
                app:layout_constraintEnd_toEndOf="@id/view_workout_tip"
                android:layout_marginEnd="16dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/view_workout_tip"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:cornerRadius="10dp"
                android:text="5 day better you program"
                android:fontFamily="@font/opensans_regular"
                app:icon="@drawable/ic_button_image"
                app:iconTint="@color/white"
                app:iconGravity="end"
                android:backgroundTint="@color/green"
                android:layout_margin="16dp"
                android:padding="16dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>